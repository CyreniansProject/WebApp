<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Cyrenians Farm - Management</title>

        <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">

    <!-- MetisMenu CSS -->
    <link href="/css/metisMenu.min.css" rel="stylesheet" type="text/css">

    <!-- Timeline CSS -->
    <link href="/css/timeline.css" rel="stylesheet" type="text/css">

    <!-- DataTables CSS -->
    <link href="/css/dataTables/dataTables.bootstrap.css" rel="stylesheet" type="text/css">

    <!-- DataTables Responsive CSS -->
    <link href="/css/dataTables/dataTables.responsive.css" rel="stylesheet" type="text/css">

    <!-- Bootstrap-Datepicker CSS -->
    <link href="/css/datepicker.css" rel="stylesheet" type="text/css">    

    <!-- Custom CSS -->
    <link href="/css/startmin.css" rel="stylesheet" type="text/css">

    <link href="/css/cyrenians.css" rel="stylesheet" type="text/css">

    <!-- Morris Charts CSS -->
    <link href="/css/morris.css" rel="stylesheet" type="text/css">

    <!-- Custom Fonts -->
    <link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="/api/dashboard">
                    <img src="/img/logo.png" class="nav-logo"/>
                </a>
            </div>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <!-- Top Navigation: Right Menu -->
            <ul class="nav navbar-right navbar-top-links">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Welcome, {{user.firstname}} <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="/api/users/profile"><i class="fa fa-user fa-fw"></i> My Profile</a></li>
                        <li class="divider"></li>
                        <li><a href="/api/users/logout"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>

            <!-- Sidebar -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">

                    <ul class="nav" id="side-menu" style="background-color: white">
                        <li class="side-nav-item">
                            <a href="/api/dashboard"> Dashboard</a>
                        </li>
                        {{#eq user.role 0}}
                        <li class="side-nav-item">
                            <a href="/api/users"> Manage Staff</a>
                        </li>
                        {{/eq}}
                        <li class="side-nav-item">
                            <a href="/api/stock"> Manage Stock</a>
                        </li>
                        <li class="side-nav-item">
                            <a href="/api/clients"> Manage Clients</a>
                        </li>
                        <li class="side-nav-item">
                            <a href="/api/bags"> Manage Bags</a>
                        </li>
                        
                        <li class="side-nav-item">
                            <a href="/api/reports">Reports<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#">Report one</a>
                                </li>
                                <li>
                                    <a href="#">Report two</a>
                                </li>
                                <li>
                                    <a href="#">Report three</a>
                                </li>                                                        
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>


        <!-- Page Content -->
        <div id="page-wrapper" class="animated fadeIn">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header" style="padding-top: 15px">{{page_title}}</h1>
                    </div>
                </div>

                <div class="col-lg-12">
                {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                {{/if}}
                
                {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}}
                
                {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                {{/if}}
            </div>    
            
            <!-- Content goes here -->
            {{{body}}}

          </div><!--.container-fluid-->
    </div><!--.page-wrapper-->
</div>

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>

    <!-- Bootstrap-Datepicker Javascript -->
    <script src="/js/bootstrap-datepicker.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/js/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="/js/startmin.js"></script>

    <!-- DataTables JavaScript -->
    <script src="/js/dataTables/jquery.dataTables.min.js"></script>
    <script src="/js/dataTables/dataTables.bootstrap.min.js"></script>
</body>
</html>