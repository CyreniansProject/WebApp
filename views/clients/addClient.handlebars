      {{/each}}
{{/if}}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please fill out the details</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post" action="/api/clients/new">
                            <fieldset>
                                <div class="form-group">
                                    <label>Full name <span style="color:red;">*</span></label>
                                    <input class="form-control" placeholder="" name="fullname" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Email address <span style="color:red;">*</span></label>
                                    <input class="form-control" placeholder="" name="email" type="email">
                                </div>
                                <div class="form-group">
                                    <label>Bank account <span style="color:red;">*</span></label>
                                    <input class="form-control" placeholder="" name="account" type="text">
                                </div>
                                <div class="form-group">
                                    <label>Collection point <span style="color:red;">*</span></label>
                                    <input class="form-control" placeholder="" name="address" type="text">
                                </div>
                                <div class="form-group">
                                    <label>Frequency <span style="color:red;">*</span></label>
                                    <select multiple class="form-control" name="frequency">
                                        <option selected>Choose...</option>
                                        <option value="Ad-hoc">Ad-hoc</option>
                                        <option value="Weekly">Weekly</option>
                                        <option value="Forth-nightly">Forth-nightly</option>
                                        <option value="Monthly">Monthly</option>
                                    </select>
                                </div>

