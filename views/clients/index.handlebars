{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 65px;" class="panel-heading">
            <big><strong>Table view of all clients and their subscriptions</strong></big>
            <a href="/api/clients/new" class="btn btn-purple pull-right" role="button">Add Client</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Full name</th>
                            <th>Last order</th>
                            <th>Frequency</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each clients}}
                        <tr>
                            <td style="text-align: center;margin: 0px;padding: 5px 0px 5px 0px;width: 100px;">
                                <a href="/api/clients/edit/{{this.client._id}}" class="btn btn-primary btn-sm btn-outline">
                                    <i style="transform: scale(1.5);" class="fa fa-edit"></i>
                                </a>&nbsp;
                                <a href="/api/clients/remove/{{this.client._id}}" class="btn btn-danger btn-sm btn-outline">
                                    <i style="transform: scale(1.5);" class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td style="font-size:16px;">{{this.client.name}}</td>
                            <td style="font-size:16px;">
                                {{#eq this.lastOrder null}}
                                    <em>None</em>
                                    <a href="/api/orders/to/{{this.client._id}}/new" class="pull-right" target="_blank">
                                        <i style="margin-right: 10px; transform: scale(1.75);" class="fa fa-plus"></i>
                                    </a>
                                {{else}}
                                    {{this.lastOrder.formatDate}}
                                    <a href="/api/orders/edit/{{this.lastOrder._id}}" class="pull-right" target="_blank">
                                        <i style="margin-right: 10px; transform: scale(1.75);" class="fa fa-location-arrow"></i>
                                    </a>
                                {{/eq}}
                            </td>
                            <td style="font-size:16px;">{{this.client.frequency}}</td>
                            <td style="font-size:16px;">{{this.client.address}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#clients').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}