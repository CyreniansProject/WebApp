<script>
    $(document).ready(function() {
        function getdate(){
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            
            // format seconds
            if(s < 10){
                s = "0" + s;
            }

            // format hours (am / pm)
            if (h <= 12) {
                $("#clock").text(h + ":" + m + ":" + s + " AM");
            }
            else {
                $("#clock").text(h - 12 + ":" + m + ":" + s + " PM");
            }

            // call the func. on fixed intervals
            setTimeout(function(){getdate()}, 500);
        }
        getdate();
    });
</script>