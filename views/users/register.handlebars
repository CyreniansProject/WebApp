{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form class="form-signup" method="post" action="/api/users/register">
    <legend>Add a new member</legend>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
        </div>
        <input type="firstname" name="firstname" class="form-control" placeholder="First name" aria-label="Email address" aria-describedby="basic-addon1" autofocus>
    </div>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
        </div>
        <input type="lastname"  name="lastname" class="form-control" placeholder="Last name" aria-label="Email address" aria-describedby="basic-addon1">
    </div>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">@</span>
        </div>
        <input type="email"  name="email" class="form-control" placeholder="Email address" aria-label="Email address" aria-describedby="basic-addon1">
    </div>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-universal-access" aria-hidden="true"> Access</i></span>
        </div>
        <select class="custom-select" name="role" required>
            <option selected>Choose...</option>
            <option value="0">Administrator</option>
            <option value="1">Staff member</option>
            <option value="2">Delivery man</option>
        </select>
    </div>

    <button class="btn btn-lg btn-info btn-block" type="submit">
        Create user <i class="fa fa-sign-in" aria-hidden="true"></i>
    </button>
</form>