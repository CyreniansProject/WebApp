{{#if valid_msg}}
    <div class="alert alert-danger">{{valid_msg}}</div>
{{/if}}

<div class="panel-body" id="login-panel">
    <center>
        <img src="/img/logo.png" class="nav-logo" alt="Cyrenians Logo"> 
        <h1 style="margin-top: 40px">Set a new password</h1>                       
    </center>
    
    <div class="row" style="margin-top: 40px">
        <div class="col-sm-8 col-sm-offset-2">
            <form method="POST" action="/api/users/reset">
                <div class="form-group">
                    <label for="inputEmail">Email address <span class="required">*</span></label>
                    <input class="form-control" id="inputEmail" name="email" type="email" value="{{email}}" readonly="true">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password <span class="required">*</span></label>
                    <input class="form-control" id="inputPassword" name="password" type="password" autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Confirm password <span class="required">*</span></label>
                    <input class="form-control" id="inputPassword" name="confirmPassword" type="password">
                </div>
                <button type="submit" class="btn btn-default btn-purple btn-block">Continue</button>
            </form>
        </div>
    </div>  
    
</div><!--.panel-body-->