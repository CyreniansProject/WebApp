{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 65px;" class="panel-heading">
            <big><strong>Table of all staff members and their details</strong></big>
            <a href="/api/users/new" class="btn btn-purple pull-right" role="button">Add Member</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="staff-members">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Full name</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td style="text-align: center; margin: 0px; padding: 5px 0px 5px 0px; width: 100px;">
                                <a href="/api/users/edit/{{this._id}}" class="btn btn-primary btn-sm btn-outline" role="button">
                                    <i class="fa fa-edit"></i>
                                </a>&nbsp;
                                <a href="/api/users/remove/{{this._id}}" class="btn btn-danger btn-sm btn-outline" role="button">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td style="font-size:16px;">{{this.firstname}} {{this.lastname}}</td>
                            <td style="font-size:16px;"><a href="mailto:{{this.email}}" style="text-decoration: none;">{{this.email}}</a></td>
                            {{#eq this.role 0}}
                                <td style="font-size:16px;">Administrator</td>
                            {{/eq}}
                            {{#eq this.role 1}}
                                <td style="font-size:16px;">Staff member</td>
                            {{/eq}}
                            {{#eq this.role 2}}
                                <td style="font-size:16px;">Delivery man</td>
                            {{/eq}}
                            
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#staff-members').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}