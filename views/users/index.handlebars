{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 65px;" class="panel-heading">
            <big><strong>Table of all staff members and their details</strong></big>
            <a href="/api/users/new" class="btn btn-purple pull-right" role="button">Add Member</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="staff-members">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Full name</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td style="text-align: center; margin: 0px; padding: 5px 0px 5px 0px; width: 100px;">
                                <a href="/api/users/edit/{{this._id}}" class="btn btn-primary btn-sm btn-outline" role="button">
                                    <i style="transform: scale(1.5);" class="fa fa-edit"></i>
                                </a>&nbsp;
                                <a class="btn btn-danger btn-sm btn-outline" type="button" data-toggle="modal" data-target="#del-modal-{{this._id}}">
                                    <i style="transform: scale(1.5);" class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td style="font-size:16px;">{{this.firstname}} {{this.lastname}}</td>
                            <td style="font-size:16px;">
                                {{this.email}}
                                <a href="mailto:{{this.email}}" class="pull-right" style="text-decoration: none; color: #666;">
                                    <i style="margin-right: 10px; transform: scale(1.75);" class="fa fa-envelope"></i>
                                </a>
                            </td>
                            {{#eq this.role 0}}
                                <td style="font-size:16px;">Administrator</td>
                            {{/eq}}
                            {{#eq this.role 1}}
                                <td style="font-size:16px;">Staff member</td>
                            {{/eq}}
                            {{#eq this.role 2}}
                                <td style="font-size:16px;">Delivery man</td>
                            {{/eq}}
                        </tr>

                        <!-- .DELETE MODAL-->
                        <div class="modal fade" id="del-modal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                <button type="button" class="close" style="transform: scale(1.5);" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <center>
                                    <h1>Deleting user <strong>{{this.firstname}} {{this.lastname}}</strong> ... ?</h1>
                                </center>
                                </div>
                                
                                <div class="modal-footer">
                                <center>
                                    <a href="/api/users/remove/{{this._id}}" class="btn btn-purple">Confirm</a>
                                    <button type="button" class="btn btn-purple" data-dismiss="modal" aria-label="Close">Cancel</button>
                                </center>
                                </div>
                            </div>
                            </div> 
                        </div>
                        <!-- /.DELETE MODAL-->
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#staff-members').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}