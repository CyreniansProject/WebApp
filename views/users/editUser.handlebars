{{#if user}}
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Alter the user's details</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post" action="/api/users/update">
                            <input class="form-control" name="userId" type="hidden" value="{{member._id}}">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="First name" name="firstname" value="{{member.firstname}}" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Last name" name="lastname" value="{{member.lastname}}" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" value="{{member.email}}" type="email">
                                </div>
                                <div class="form-group">
                                    <label>Access level</label>
                                    <select multiple class="form-control" id="access" name="role" required>
                                        <option selected>Choose...</option>
                                        <option value="0">Administrator</option>
                                        <option value="1">Staff member</option>
                                        <option value="2">Delivery man</option>
                                    </select>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-purple btn-block">Save changes</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
