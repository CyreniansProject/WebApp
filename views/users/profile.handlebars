{{#if user}}
{{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <big>Your role is</big> <span class="panel-title">{{access}}</span>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post" action="/api/users/update">
                            <input class="form-control" name="userId" type="hidden" value="{{user._id}}">
                            <input class="form-control" name="role" type="hidden" value="{{user.role}}">
                            <fieldset>
                                <label>Account details:</label>
                                <div class="form-group">
                                    <input class="form-control" placeholder="First name" name="firstname" value="{{user.firstname}}" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Last name" name="lastname" value="{{user.lastname}}" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" value="{{user.email}}" type="email">
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-purple btn-block">Save details</button>
                            </fieldset>
                        </form>
                        <br>
                        <form role="form" method="post" action="/api/users/reset">
                            <input class="form-control" name="email" type="hidden" value="{{user.email}}">
                            <fieldset>
                                <label>Change password (optional to fill out):</label>
                                <div class="form-group">
                                    <input class="form-control" placeholder="New password" name="password" type="password">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Confirm new password" name="confirmPassword" type="password">
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-purple btn-block">Save password</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}