{{#if user}}
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please fill out the details</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <form role="form" method="post" action="/api/bags/new">
                            <fieldset>
                                <div class="form-group row">
                                <div class="pull-left col-sm-6">
                                    <h4>List of products</h4>
                                    <hr>
                                    <div style="height: 250px; overflow-y: auto;" class="list-group">
                                        {{#each products}}
                                        <a href="#{{this._id}}" class="list-group-item list-group-item-action productToAdd">{{this.name}}</a>
                                        {{/each}}
                                    </div>
                                    <button class="btn btn-md btn-danger btn-block">Add to bag >></button>
                                </div>
                                <div class="pull-left col-sm-6">
                                    <h4>Products in bag</h4>
                                    <hr>
                                    <div style="height: 250px; overflow-y: auto;" class="list-group">
                                        {{#withBefore products 4}}
                                        <a href="#{{this._id}}" class="list-group-item list-group-item-action productToAdd">{{this.name}}</a>
                                        {{/withBefore}}
                                    </div>
                                    <button class="btn btn-md btn-danger btn-block"><< Remove from bag</button>
                                </div>
                                </div>
                                <div class="form-group row">
                                    <div class="pull-left col-sm-6">
                                    <h4>Date of creation <span style="color:red;">*</span></h4>
                                        <div class="input-group date">
                                            <input type="text" class="form-control" name="date">
                                            <div class="input-group-addon">
                                                mm/dd/yyyy
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br><br>
                                <button type="submit" class="btn btn-lg btn-danger btn-block">Create bag</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

