integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
         $('.date input').each(function() {
            $(this).datepicker();
        });
    });
</script>
{{/if}}