{{#if user}}
<div class="row">
    <div class="col-lg-7">
        <label><strong>Display bags between specific dates</strong></label>
        <form class="form-inline" method="POST">
            <div class="form-group">
                <label for="inputStartDate">From</label>
                <input type="date" class="form-control" id="inputStartDate">
            </div>
            <div class="form-group">
                <label for="inputEndDate">To</label>
                <input type="date" class="form-control" id="inputEndDate">
            </div>
            <button type="submit" class="btn btn-purple">Show</button>
        </form>        
    </div>
</div>
<div class="row" style="margin-top: 25px">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 65px;" class="panel-heading">
            <big><strong>Table view of all veg bags and their past/current active period</strong></big>
            <a href="/api/bags/new" class="btn btn-purple pull-right" role="button">Add Bag</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Active period</th>
                            <th>Small price (GBP)</th>
                            <th>Medium price (GBP)</th>
                            <th>Large price (GBP)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each bags}}
                        <tr>
                            <td style="text-align: center; margin: 0px; padding: 5px 0px 5px 0px; width: 100px;">
                                <a href="/api/bags/edit/{{this._id}}" class="btn btn-primary btn-sm btn-outline" role="button">
                                    <i class="fa fa-edit"></i>
                                </a>&nbsp;
                                <a href="/api/bags/remove/{{this._id}}" class="btn btn-danger btn-sm btn-outline" role="button">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td style="font-size:18px;">{{this.startDate}} - {{this.endDate}}</td>
                            <td style="font-size:18px;">{{this.priceSmall}}</td>
                            <td style="font-size:18px;">{{this.priceMedium}}</td>
                            <td style="font-size:18px;">{{this.priceLarge}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#clients').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}