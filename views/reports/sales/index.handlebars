{{#if user}}
<style>
#sales-chart {
    max-height: 500px;
    margin: 10px;
}

.morris-hover.morris-default-style {
    transform: scale(2.0, 2.0);
}
</style>
<div class="row">
    <div class="col-lg-7">
        <label><strong>Display sales summary for particular dates</strong></label>
        <form class="form-inline" method="GET" action="/api/reports/sales/summary">
            <div class="input-group input-daterange">
                <label>From</label>
                <div class="form-group">
                    {{#if criteria.startDate}}
                    <input type="text" class="form-control" name="startDate" value="{{criteria.startDate}}">
                    {{else}}
                    <input type="text" class="form-control" name="startDate" placeholder="mm-dd-yyyy">
                    {{/if}}
                </div>
                <label>To</label>
                <div class="form-group">
                    {{#if criteria.endDate}}
                    <input type="text" class="form-control" name="endDate" value="{{criteria.endDate}}">
                    {{else}}
                    <input type="text" class="form-control" name="endDate" placeholder="mm-dd-yyyy">
                    {{/if}}
                </div>
            </div>
            <button type="submit" class="btn btn-purple">Show</button>
        </form>
    </div>
</div>

<div class="row" style="margin-top: 25px">
<div class="col-lg-12">
    <!-- TABLE VIEW -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong><big>Sales overview - Table</big></strong>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th>Small bags</th>
                            <th>Medium bags</th>
                            <th>Large bags</th>
                            <th>Total Profits (GBP)</th>
                            <th>Total Expenses (GBP)</th>
                            <th>Gross profit (GBP)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="font-weight: bold;">
                            <td style="font-size:16px;">100</td>
                            <td style="font-size:16px;">200</td>
                            <td style="font-size:16px;">300</td>
                            <td style="font-size:16px;">3000</td>
                            <td style="font-size:16px;">2000</td>
                            <td style="font-size:16px;">1000</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    
    <!-- BARCHART VIEW -->
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong><big>Sales overview - Bar Chart</big></strong>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div id="sales-chart"></div>
        </div>
        <div id="legend" class="bar-legend"></div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>
<!-- Morris Charts JavaScript -->
<script src="/js/raphael.min.js"></script>
<script src="/js/morris.min.js"></script>
<script>
    $(document).ready(function() {
        
        $('#clients').DataTable({
            responsive: true,
            paging: false,
            searching: false,
            ordering: false,
            dom: ''
        });

        // date view
        $('.input-daterange input').each(function() {
            $(this).datepicker({
                format: 'mm-dd-yyyy'
            });
        });

        // bar-chart view
        var salesChart = Morris.Bar({
            element: 'sales-chart',
            data: [{ 
                date: '01/01/2017 - 31/12/2017', 
                smallBags: 100, 
                mediumBags: 200, 
                largeBags: 300, 
                totalProfits: 3000, 
                totalExpenses: 2000, 
                grossProfit: 1000 
            }],
            xkey: 'date',
            ykeys: ['smallBags', 'mediumBags', 'largeBags', 'totalProfits', 'totalExpenses', 'grossProfit'],
            labels: ['Small bags', 'Medium bags', 'Large bags', 'Total profits', 'Total expenses', 'Gross profit'],
            hideHover: 'auto',
            resize: true
        });
    });
</script>
{{/if}}