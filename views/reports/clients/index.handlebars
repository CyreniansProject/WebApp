{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong><big>Clients overview</big></strong>
        </div>
        <!-- /.panel-heading -->

        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="total-clients">
                    <thead>
                        <tr>
                            <th>Total number of clients</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="font-weight: bold;">
                            <td style="font-size:16px;">{{this.totalNum}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <strong><big>Table of client names and email addresses</big></strong>
        </div>
        <!-- /.panel-heading -->
        
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th>Full name</th>
                            <th>Email address</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each clients}}
                        <tr>
                            <td style="font-size:16px;">
                                <a href="/api/clients/edit/{{this._id}}" style="text-decoration: none; color: #333;" target="_blank">
                                    {{this.name}}
                                </a>
                            </td>
                            <td style="font-size:16px;">
                                <a href="mailto:{{this.email}}" style="text-decoration: none; color: #333;">
                                    {{this.email}}
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#total-clients').DataTable({
            responsive: true,
            paging: false,
            searching: false,
            ordering: false,
            dom: ''
        });

        $('#clients').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}