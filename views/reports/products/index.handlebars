{{#if user}}
<div class="row">
    <div class="col-lg-7">
        <label><strong>
            Display products summary for particular dates
            <br>
            Filter is applied to both harvesting and purchasing
        </strong></label>
        <form class="form-inline" method="GET" action="/api/reports/products/summary">
            <div class="input-group input-daterange">
                <label>From</label>
                <div class="form-group">
                    {{#if criteria.startDate}}
                    <input type="text" class="form-control" name="startDate" value="{{criteria.startDate}}">
                    {{else}}
                    <input type="text" class="form-control" name="startDate" placeholder="mm-dd-yyyy">
                    {{/if}}
                </div>
                <label>To</label>
                <div class="form-group">
                    {{#if criteria.endDate}}
                    <input type="text" class="form-control" name="endDate" value="{{criteria.endDate}}">
                    {{else}}
                    <input type="text" class="form-control" name="endDate" placeholder="mm-dd-yyyy">
                    {{/if}}
                </div>
            </div>
            <button type="submit" class="btn btn-purple">Show</button>
        </form>
    </div>
</div>
<div class="row" style="margin-top: 25px">
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong><big>Products overview</big></strong>
        </div>
        <!-- /.panel-heading -->

        <div class="panel-body">
            <div class="dataTable_wrapper" style="margin: 10px;">
                <table class="table table-striped table-bordered table-hover" id="total-products">
                    <thead>
                        <tr>
                            <th>Total products in stock</th>
                            <th>Total products harvested</th>
                            <th>Total products purchased</th>
                            <th>Total products sold</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="font-weight: bold;">
                            <td style="font-size:16px;">1680</td>
                            <td style="font-size:16px;">1500</td>
                            <td style="font-size:16px;">180</td>
                            <td style="font-size:16px;">1000</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <strong><big>Table of product details, their harvesting and purchases</big></strong>
        </div>
        <!-- /.panel-heading -->

        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="products">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Amount Harvested</th>
                            <th>Amount Purchased</th>
                            <th>Amount Sold</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td style="font-size:16px;">{{this.product.name}}</td>
                            {{#eq this.harvestSum 0}}
                            <td style="font-size:16px;"><em>No harvests</em></td>
                            {{else}}
                            <td style="font-size:16px;">{{this.harvestSum}}</td>
                            {{/eq}}
                            {{#eq this.purchaseSum 0}}
                            <td style="font-size:16px;"><em>No purchases</em></td>
                            {{else}}
                            <td style="font-size:16px;">{{this.purchaseSum}}</td>
                            {{/eq}}
                            {{#eq this.soldSum 0}}
                            <td style="font-size:16px;"><em>None</em></td>
                            {{else}}
                            <td style="font-size:16px;">{{this.soldSum}}</td>
                            {{/eq}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#total-products').DataTable({
            responsive: true,
            paging: false,
            searching: false,
            ordering: false,
            dom: ''
        });

        $('#products').DataTable({
            responsive: true
        });

        $('.input-daterange input').each(function() {
            $(this).datepicker({
                format: 'mm-dd-yyyy'
            });
        });
    });
</script>
{{/if}}