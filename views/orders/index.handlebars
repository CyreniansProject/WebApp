{{#if user}}
<div class="row">
    <div class="col-lg-7">
        <label><strong>Display orders between specific dates</strong></label>
        <form class="form-inline" method="POST" action="">
            <div class="input-group input-daterange">
                <label>From</label>
                <div class="form-group">
                    <input type="text" class="form-control" name="startDate" placeholder="mm/dd/yyyy">
                </div>
                <label>To</label>
                <div class="form-group">
                    <input type="text" class="form-control" name="endDate" placeholder="mm/dd/yyyy">
                </div>
            </div>
            <button type="submit" class="btn btn-purple">Show</button>
        </form>        
    </div>
</div>
<div class="row" style="margin-top: 25px">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 65px;" class="panel-heading">
            <div class="btn-group pull-left" role="group">
                <a href="/api/orders/to/{{clientId}}" class="btn btn-purple btn-md" role="button">
                    <strong>Client orders</strong>
                </a>
                <a href="/api/clients/edit/{{clientId}}" class="btn btn-primary btn-outline btn-md" role="button">
                    <strong>Client details</strong>
                </a>
            </div>
            <a href="/api/orders/to/{{clientId}}/new" class="btn btn-purple pull-right" role="button">Add Order</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Date</th>
                            <th>Bags amount</th>
                            <th>Type of bag</th>
                            <th>Deposit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>
                            <td style="text-align: center; margin: 0px; padding: 5px 0px 5px 0px; width: 100px;">
                                <a href="/api/orders/edit/{{this._id}}" class="btn btn-primary btn-sm btn-outline" role="button">
                                    <i class="fa fa-edit"></i>
                                </a>&nbsp;
                                <a href="/api/orders/remove/{{this._id}}" class="btn btn-danger btn-sm btn-outline" role="button">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td style="font-size:16px;">{{this.date}}</td>
                            <td style="font-size:16px;">{{this.numberOfBags}}</td>
                            <td style="font-size:16px;">{{this.typeOfBag}}</td>
                            {{#eq this.depositPaid true}}
                                <td style="font-size:16px;">Paid</td>
                            {{else}}
                                <td style="font-size:16px;">Not paid</td>
                            {{/eq}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
        $('#clients').DataTable({
            responsive: true
        });

        $('.input-daterange input').each(function() {
            $(this).datepicker({
                format: 'mm/dd/yyyy'
            });
        });

    });
</script>
{{/if}}