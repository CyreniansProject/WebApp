{{#if user}}
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="btn-group" role="group">
                    <a href="/api/stock/purchases/to/{{productId}}" class="btn btn-primary btn-outline btn-md" role="button">
                        <strong>Product purchases</strong>
                    </a>
                    <a href="/api/stock/harvests/to/{{productId}}" class="btn btn-primary btn-outline btn-md" role="button">
                        <strong>Product harvestings</strong>
                    </a>
                    <a href="/api/stock/products/edit/{{productId}}" class="btn btn-purple btn-md" role="button">
                        <strong>Product details</strong>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post" action="/api/stock/products/update">
                            <input class="form-control" name="productId" type="hidden" value="{{productId}}">
                            <fieldset>
                                <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Product name <span style="color:red;">*</span></label>
                                        <div class="col-sm-3">
                                            <input value="{{product.name}}" class="form-control pull-right" placeholder="" name="itemName" type="text">
                                        </div>
                                </div>
                                <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">
                                        Average weight (kg) 
                                        <span style="color:red;">*</span><br>
                                        <smal><strong>amount in a bag</strong></smal>
                                    </label>
                                        <div class="col-sm-3">
                                            <div class="input-group">
                                            <input value="{{product.avgWeight}}" class="form-control pull-right" placeholder="" name="avgWeight" type="text">
                                            <div class="input-group-addon">kilograms</div>
                                            </div>
                                        </div>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-purple btn-block">Update product</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
