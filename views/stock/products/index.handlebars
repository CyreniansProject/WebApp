{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 50px;" class="panel-heading">
            <a href="/api/stock/products/new" class="btn btn-danger pull-right" role="button">New product</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Name</th>
                            <th>Average weight</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td style="text-align: center;margin: 0px;padding: 5px;width: 120px;">
                                <a href="/api/stock/products/edit/{{this._id}}" class="btn btn-primary btn-outline" role="button">
                                    <strong>Edit</strong>
                                </a>&nbsp;
                                <a href="/api/stock/products/remove/{{this._id}}" class="btn btn-danger btn-outline" role="button">
                                    <strong>Del</strong>
                                </a>
                            </td>
                            <td style="font-size:18px;">{{this.name}}</td>
                            <td style="font-size:18px;">{{this.avgWeight}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#clients').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}