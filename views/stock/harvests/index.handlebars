{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 50px;" class="panel-heading">
            <div class="btn-group pull-left" role="group">
                <a href="/api/stock/harvests/to/{{productId}}" class="btn btn-danger btn-md" role="button">
                    <strong>Product harvestings</strong>
                </a>
                <a href="/api/stock/products/edit/{{productId}}" class="btn btn-primary btn-outline btn-md" role="button">
                    <strong>Product details</strong>
                </a>
            </div>
            <div style="margin-left: 15%;" class="input-group input-daterange col-sm-4 pull-left">
                <div class="input-group-addon">From</div>
                <input type="text" class="form-control">
                <div class="input-group-addon">To</div>
                <input type="text" class="form-control">
                <a style="text-decoration: none; background-color: #d9534f; color: white; border: 1px #d43f3a solid;" href="#" class="input-group-addon">Update</a>
            </div>
            <a href="/api/stock/harvests/to/{{productId}}/new" class="btn btn-danger pull-right" role="button">New harvesting</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Picking week</th>
                            <th>Harvested amount</th>
                            <th>Total weight (kg)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each harvests}}
                        <tr>
                            <td style="text-align: center;margin: 0px;padding: 5px;width: 120px;">
                                <a href="/api/stock/harvests/edit/{{this._id}}" class="btn btn-primary btn-outline" role="button">
                                    <strong>Edit</strong>
                                </a>&nbsp;
                                <a href="/api/stock/harvests/remove/{{this._id}}" class="btn btn-danger btn-outline" role="button">
                                    <strong>Del</strong>
                                </a>
                            </td>
                            <td style="font-size:18px;">{{this.pickingWeek}}</td>
                            <td style="font-size:18px;">{{this.amountHarvested}}</td>
                            <td style="font-size:18px;">{{multiply this.amountHarvested this.product.avgWeight}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
        $('#clients').DataTable({
            responsive: true
        });

        $('.input-daterange input').each(function() {
            $(this).datepicker();
        });
    });
</script>
{{/if}}