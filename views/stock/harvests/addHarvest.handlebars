                                            <input class="form-control pull-right" placeholder="" name="amountHarvested" type="text">
                                            <div class="input-group-addon">Amount</div>
                                            </div>
                                        </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Harvesting date <span style="color:red;">*</span></label>
                                    <div class="col-sm-3">
                                        <div class="input-group date">
                                            <input type="text" class="form-control" name="pickingWeek" placeholder="mm/dd/yyyy">
                                            <div class="input-group-addon">
                                                date
                                            </div>
                                        </div>
                                    </div>
                                </div>
