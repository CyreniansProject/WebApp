{{#if user}}
<div class="row">
    <div class="col-lg-7">
        <label><strong>Display purchases between specific dates</strong></label>
        <form class="form-inline" method="GET" action="/api/stock/purchases/to/{{productId}}">
            <div class="input-group input-daterange">
                <label>From</label>
                <div class="form-group">
                    {{#if criteria.startDate}}
                    <input type="text" class="form-control" name="startDate" value="{{criteria.startDate}}">
                    {{else}}
                    <input type="text" class="form-control" name="startDate" placeholder="mm-dd-yyyy">
                    {{/if}}
                </div>
                <label>To</label>
                <div class="form-group">
                    {{#if criteria.endDate}}
                    <input type="text" class="form-control" name="endDate" value="{{criteria.endDate}}">
                    {{else}}
                    <input type="text" class="form-control" name="endDate" placeholder="mm-dd-yyyy">
                    {{/if}}
                </div>
            </div>
            <button type="submit" class="btn btn-purple">Show</button>
        </form>        
    </div>
</div>
<div class="row" style="margin-top: 25px">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div style="height: 65px;" class="panel-heading">
            <div class="btn-group pull-left" role="group">
                <a href="/api/stock/purchases/to/{{productId}}" class="btn btn-purple btn-md" role="button">
                    <strong>Product purchases</strong>
                </a>
                <a href="/api/stock/harvests/to/{{productId}}" class="btn btn-primary btn-outline btn-md" role="button">
                    <strong>Product harvestings</strong>
                </a>
                <a href="/api/stock/products/edit/{{productId}}" class="btn btn-primary btn-outline btn-md" role="button">
                    <strong>Product details</strong>
                </a>
            </div>
            <a href="/api/stock/purchases/to/{{productId}}/new" class="btn btn-purple pull-right" role="button">Add Purchase</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="clients">
                    <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Purchase date</th>
                            <th>Number of units</th>
                            <th>Unit price</th>
                            <th>Total weight</th>
                            <th>Total price</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each purchases}}
                        <tr>
                            <td style="text-align: center; margin: 0px; padding: 5px 0px 5px 0px; width: 100px;">
                                <a href="/api/stock/purchases/edit/{{this._id}}" class="btn btn-primary btn-sm btn-outline" role="button">
                                    <i style="transform: scale(1.5);" class="fa fa-edit"></i>
                                </a>&nbsp;
                                <a href="/api/stock/purchases/remove/{{this._id}}" class="btn btn-danger btn-sm btn-outline" role="button">
                                    <i style="transform: scale(1.5);" class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td style="font-size:16px;">{{this.formatDate}}</td>
                            <td style="font-size:16px;">{{this.amountPurchased}}</td>
                            <td style="font-size:16px;">&pound; {{toFixed this.price 2}}</td>
                            {{!-- Make it toFixed --}}
                            <td style="font-size:16px;">{{toFixed this.totalWeight 2}} <small>kg</small></td>
                            <td style="font-size:16px;">&pound; {{toFixed this.totalPrice 2}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>
<script>
    $(document).ready(function() {
        $('#clients').DataTable({
            responsive: true
        });

        $('.input-daterange input').each(function() {
            $(this).datepicker({
                format: 'mm/dd/yyyy'
            });
        });
    });
</script>
{{/if}}