{{#if user}}
<div class="row">
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Weekly record of harvested <strong>{{name}}</strong> items
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="fruit-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Avg. weight</th>
                            <th>Picking date</th>
                            <th>Picked amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each fruits}}
                        <tr>
                            <td>
                                <span class="pull-right">
                                    <strong>{{this.item}}</strong>
                                </span>
                                <span class="pull-left">
                                    <strong>
                                    <a style="text-decoration: none;" href="/api/stock/fruit/update/{{this._id}}">Update</a> /
                                    <a style="text-decoration: none;" href="/api/stock/fruit/remove/{{this._id}}">Remove</a>
                                    </strong>
                                </span>
                            </td>
                            <td>
                                {{this.avgWeight}}
                            </td>
                            <td>
                                {{#if this.pickDate}}
                                    {{this.pickDate}}
                                {{else}}
                                    <span class="pull-left">
                                        No <strong>date</strong> added
                                    </span>
                                    <span class="pull-right">
                                        <strong style="color: red;">Needs update!</strong>
                                    </span>
                                {{/if}}
                            </td>
                            <td>
                                {{#if this.pickAmount}}
                                    {{this.pickAmount}}
                                {{else}}
                                    <span class="pull-left">
                                        No <strong>amount</strong> added
                                    </span>
                                    <span class="pull-right">
                                        <strong style="color: red;">Needs update!</strong>
                                    </span>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
</div>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script src="http://code.jquery.com/jquery-3.3.1.min.js" 
integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" 
crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        $('#fruit-table').DataTable({
            responsive: true
        });
    });
</script>
{{/if}}