{{#unless user}}
<div class="panel-body" id="login-panel">
    <center>
        <img src="/img/logo.png" class="nav-logo" alt="Cyrenians Logo"> 
        <h1 style="margin-top: 40px">{{page_title}}</h1>                       
    </center>
    
    <div class="row" style="margin-top: 40px">
        <div class="col-sm-8 col-sm-offset-2">
            <form method="POST" action="/api/users/login">
                <div class="form-group">
                    <label for="inputEmail">Email address <span class="required">*</span></label>
                    <input type="email" class="form-control" id="inputEmail" name="email" autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password <span class="required">*</span></label>
                    <input type="password" class="form-control" id="inputPassword" name="password">
                </div>
                <button type="submit" class="btn btn-default btn-purple btn-block">Sign In</button>
            </form>
        </div>
    </div>  

    <p id="forgot-password-link"><a href="#">Forgotten password?</a></p>
    
</div><!--.panel-body-->
{{/unless}}

{{#if user}}
<script>window.location.href = "/api/dashboard";</script>
{{/if}}