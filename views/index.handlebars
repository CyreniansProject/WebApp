<form class="form-signin" method="post" action="/api/users/login">
    <legend>Sign in to your account</legend>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">@</span>
        </div>
        <input type="email" name="email" class="form-control" placeholder="Email address" aria-label="Email address" aria-describedby="basic-addon1" required autofocus>
    </div>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
        </div>
        <input type="password" name="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" required>
    </div>
    <button class="btn btn-lg btn-info btn-block" type="submit">
        Sign in <i class="fa fa-sign-in" aria-hidden="true"></i>
    </button>
</form>
<a href="/forgot"><u>Forgotten password</u></a> | <a href="/help"><u>Need help?</u></a>